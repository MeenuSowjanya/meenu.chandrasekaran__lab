

<main class="TodoPageMain">
      <article>
        <h1 class="TodoPage-title">My Todo-List</h1>
        <section class="AddTodo">
          <input
            class="AddTodo-text"
            type="text"
            name="TodoText"
            placeholder="What's next?"
          />
          <input class="AddTodo-date" type="date" name="TodoDueDate" />
          <input class="AddTodo-button" type="button" value="Add" />
        </section>

        <%= render partial: "todo-section", locals: {section_title: "Overdue", todos: Todo.overdue, show_due_date: true} %>
        <%= render partial: "todo-section", locals: {section_title: "Due Today", todos: Todo.duetoday, show_due_date: false} %>
        <%= render partial: "todo-section", locals: {section_title: "Due Later", todos: Todo.duelater, show_due_date: true} %>
      </article>
</main>